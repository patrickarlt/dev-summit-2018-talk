{
  "name": "custom-element",
  "version": "1.0.0",
  "scripts": {
    "build:app": "dojo build app -m dev",
    "build:widgets": "dojo build widget -m dev",
    "build": "npm run build-app && npm run build-widgets",
    "watch:widgets": "dojo build widget -m dev -w",
    "watch:app": "dojo build -w -m=dev",
    "serve": "http-server output/dev",
    "start": "npm run watch:widgets & npm run watch:app & npm run serve"
  },
  "dependencies": {
    "@dojo/cli": "^0.5.0",
    "@dojo/core": "~0.4.0",
    "@dojo/has": "~0.1.2",
    "@dojo/i18n": "~0.5.0",
    "@dojo/routing": "~0.5.0",
    "@dojo/shim": "~0.2.6",
    "@dojo/widget-core": "~0.9.4",
    "tslib": "~1.8.1"
  },
  "devDependencies": {
    "@dojo/cli-build-app": "~0.3.1",
    "@dojo/cli-build-widget": "~0.2.0",
    "@dojo/loader": "~0.1.1",
    "@dojo/test-extras": "~0.6.0",
    "@types/glob": "~5.0.0",
    "@types/grunt": "~0.4.0",
    "@types/node": "^6.0.46",
    "http-server": "^0.11.1",
    "typescript": "~2.6.1"
  }
}
